@model IEnumerable<Student_Task_Management.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Projects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
 
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.project_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.project_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.project_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller ="Tasks" asp-action="Index">View The Available Tasks!</a> <br />
<a asp-controller="Team" asp-action="Index">View The Available Team Members!</a>